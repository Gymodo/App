<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/SeriesSelectRowConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/row_background">

    <CheckBox
        android:id="@+id/SeriesSelectRowCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:clickable="false"
        android:focusable="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SeriesSelectRowExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/SeriesSelectRowCheckbox"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Push-up" />

    <TextView
        android:id="@+id/SeriesSelectRowReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/SeriesSelectRowCheckbox"
        app:layout_constraintTop_toBottomOf="@+id/SeriesSelectRowExerciseName"
        tools:text="Reps: 2" />

    <TextView
        android:id="@+id/SeriesSelectRowWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Weight: 20kg"
        app:layout_constraintBottom_toBottomOf="@+id/SeriesSelectRowReps"
        app:layout_constraintStart_toEndOf="@+id/SeriesSelectRowReps"
        app:layout_constraintTop_toTopOf="@+id/SeriesSelectRowReps" />
</androidx.constraintlayout.widget.ConstraintLayout>