<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/row_background">

    <ImageView
        android:id="@+id/SeriesRowImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_add" />

    <TextView
        android:id="@+id/SeriesRowExerciseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/SeriesRowImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Push-up" />

    <TextView
        android:id="@+id/SeriesRowReps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/SeriesRowImage"
        app:layout_constraintTop_toBottomOf="@+id/SeriesRowExerciseName"
        tools:text="Reps: 2" />

    <TextView
        android:id="@+id/SeriesRowWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Weight: 20kg"
        app:layout_constraintBottom_toBottomOf="@+id/SeriesRowReps"
        app:layout_constraintStart_toEndOf="@+id/SeriesRowReps"
        app:layout_constraintTop_toTopOf="@+id/SeriesRowReps" />
</androidx.constraintlayout.widget.ConstraintLayout>