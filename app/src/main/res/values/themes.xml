<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gymodo" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@font/montserrat</item>
        <item name="android:buttonStyle">@font/montserrat</item>

        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="Theme.Gymodo.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.Gymodo.PopupOverlay" parent="ThemeOverlay.MaterialComponents" />

    <!--If need to change current accent color
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/primaryColor</item>
    </style>-->
</resources>